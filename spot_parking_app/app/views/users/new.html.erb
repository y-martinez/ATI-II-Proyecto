<% @page_title = "Spot Parking | Sing In" %>
<main>

  <div class="page-wrap container">
 	<%= form_for @user, :html => {:class => "col-md-offset-3 col-sm-offset-2 col-sm-5 col-md-6 form-horizontal center"} do |f| %>
 	  <center><h2 class="titles">Registration</h2></center>
      <div class="form-group">
        <%= f.label :name, "Name:", class: "control-label" %>
        <div>
          <%= f.text_field :name, :required => true, placeholder:'Enter your Name' ,class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, "Email:", class: "control-label" %>
        <div>
          <%= f.email_field :email,:required => true, placeholder:'Enter your email',class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, "Password:", class: "control-label" %>
        <div>
          <%= f.password_field :password,:required => true, placeholder:'Enter your Password',pattern:'([.\wA-Za-z]){6,}',class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :con_password, "Confirmation Password:", class: "control-label" %>
        <div>
          <%= f.password_field :con_password,:required => true, placeholder:'Enter your Confirmation Password',class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
      	<%= f.submit "Submit", class: "btn btn-lg btn-default btn-primary" %>
      </div>
      <br><br>
    <% end %>
    
</main>